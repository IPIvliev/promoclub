<% provide(:title, @title) %>

	<!-- WRAPPER -->
		<div id="wrapper">

			<!-- PAGE TITLE -->
			<header id="page-title" class="nopadding">
				<div id="gmap"><!-- google map --></div>
			</header>

			<section id="contact" class="container">

			<%= render '/shared/moremenu' %>

				<% flash.each do |key, value| %>
		            <%= content_tag(:div, value, class: "alert alert-#{key}") %>
		        <% end %>

				<div class="row">

					<!-- FORM -->
					<div class="col-md-8">

						<h2>Задайте свой вопрос или просто скажите <strong><em>Привет!</em></strong></h2>

						<%= form_for @message, :url => {:controller => "messages", :action => "messagecreate" }, :class => "white-row" do |f| %>

					        <% if current_user %>
					          <%= f.hidden_field :name, :value => current_user.name %>
					          <%= f.hidden_field :email, :value => current_user.email %>
					        <% else %>
							<div class="row">
								<div class="form-group">
									<div class="col-md-6">
										<label>ФИО *</label>
										<%= f.text_field :name, :placeholder => "Игорь Иванов", :maxlength => "100", :class => "form-control", :required => "required" %>
									</div>
									<div class="col-md-6">
										<label>E-mail *</label>
										<%= f.text_field :email, :placeholder => "infocom-nn@yandex.ru", :maxlength => "100", :class => "form-control", :id => "email", :required => "required" %>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="form-group">
									<div class="col-md-12">
										<label>Телефон (если Вы хотите, чтобы мы Вам перезвонили)</label>
										<%= f.text_field :phone, :placeholder => "8-903-602-89-19", :maxlength => "100", :class => "form-control" %>
									</div>
								</div>
							</div>
							<% end %>

							<div class="row">
								<div class="form-group">
									<div class="col-md-12">
										<label>Ваш вопрос *</label>
										<%= f.text_area :text, :maxlength => "5000", :placeholder => "Задайте свой вопрос здесь", :rows => "10", :class => "form-control", :maxlength => "100", :minlength => "10", :required => "required" %>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<%= f.submit :value => "Отправить Сообщение", :class => "btn btn-primary btn-lg" %>
								</div>
							</div>
						<% end %>
					
					</div>
					<!-- /FORM -->


					<!-- INFO -->
					<div class="col-md-4">

						<h2>Наши координаты</h2>

						<p>
							Мы всегда рады звонкам от потенциальных клиентов. Уверены, что даже в случае, если вы не станете заказчиком, наши специалисты смогут дать Вам профессиональную консультацию по вопросам web-разработки.
						</p>

						<div class="divider half-margins"><!-- divider -->
							<i class="fa fa-star"></i>
						</div>

						<p>
							<span class="block"><strong><i class="fa fa-map-marker"></i> Адрес:</strong> г. Нижний Новгород, ул. Бекетова, 15, оф. 4</span>
							<span class="block"><strong><i class="fa fa-phone"></i> Телефон:</strong> <span class="orange">414-89-19</span>
							<span class="block"><strong><i class="fa fa-mobile-phone"></i> Телефон:</strong> <span class="orange">8-903-602-89-19</span>
							<span class="block"><strong><i class="fa fa-edit"></i> Факс:</strong> 8 (831) 435-62-30</span>
							<span class="block"><strong><i class="fa fa-envelope"></i> Email:</strong> infocom-nn@yandex.ru</span>
						</p>

						<div class="divider half-margins"><!-- divider -->
							<i class="fa fa-star"></i>
						</div>

						<h4 class="font300">Рабочее Время</h4>
						<p>
							<span class="block"><strong>Понедельник - Пятница:</strong> С 10:00 до 19:00</span>
							<span class="block"><strong>Суббота:</strong> С 10:00 до 14:00</span>
							<span class="block"><strong>Воскресенье:</strong> Выходной</span>
						</p>

					</div>
					<!-- /INFO -->

				</div>

			</section>

		</div>
		<!-- /WRAPPER -->
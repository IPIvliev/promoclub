<% if current_user %>

<section class="container text-center">

      <nav class="nav-main pull-right" role="navigation">
        <ul class="nav nav-pills">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
             Профайл <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to "Мой профайл", user_url(current_user) if current_user.city != nil %>
              </li>
              <li>
                <%= link_to "Изменить профайл", edit_user_url(current_user) %>
              </li>
            </ul>
          </li>

          <li>
            <% if current_user.status == "promo" %>
              <%= link_to "Мои отклики (#{current_user.replies.count})", replies_user_path(current_user) %>
            <% end %>
          </li>

          <li>
            <% if current_user.status == "promo" %>
              <%= link_to "Мной заинтересовались (#{current_user.followers.count})", followers_user_path(current_user) %>
            <% else %>
              <%= link_to "Отобранные промоутеры (#{current_user.followed_users.count})", following_user_path(current_user) %>
            <% end %>
          </li>

          <% if current_user.status == "admin" || current_user.status == "agent" %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
             Вакансии <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to "Мои вакансии", "/my-vacancies.html" %>
              </li>
              <li>
                <%= link_to "Создать вакансию", new_vacancy_path %>
              </li>
            </ul>
          </li>

          <% end %>

          <li>
            <%= link_to "Мои отзывы", opinions_path %>
          </li>

          <% if current_user.status == "admin" %>
            <li>
              <%= link_to "Статистика", "/statistika.html" %>
            </li>
          <% end %>

          <li class="active">
            <%= link_to "Выйти", "/users/sign_out" %>
          </li>
        </ul>
      </nav>

    <div class="divider"></div>
</section>

<% end %>
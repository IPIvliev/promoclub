    <!-- WRAPPER -->
    <div id="wrapper">

      <div id="shop">

        <!-- PAGE TITLE -->
      <%= render "/shared/bread" %>

      <%= render "/shared/moremenu" %>

        <section class="container">

          <div class="row">

            <div class="col-md-9">

<% if @promoters.blank? %>
  <strong>По вашему запросу не найдено ни одного промоутера.</strong>
<% else %>
              <div class="row top-shop-option">
                <div class="col-sm-5 col-md-5">
                  <p>Найдено: <strong><%= @promoters.count %></strong> <%= Russian.pluralize(@promoters.count, "промоутер", "промоутера", "промоутеров") %></p>
                </div>
                <div class=" col-sm-7 col-md-7">

                  <p>Сортировка: <%= sort_link @search, :birth, "по возрасту" %> | 
                  <%= sort_link @search, :last_sign_in_at, "по дате посленего входа на сайт" %> </p>

                </div>


              </div>
<% end %>
            
              <div class="row">
              

                <% @promoters.each do |promoter| %>
                <!-- items -->
                <div class="col-sm-6 col-md-4"><!-- item -->
                  <div class="item-box">
                    <figure>
                      <a class="item-hover" href="<%= user_path(promoter) %>">
                        <span class="overlay color2"></span>
                        <span class="inner">
                          <span class="block fa fa-plus fsize20"></span>
                          <strong>ПОДРОБНАЯ</strong> ИНФОРМАЦИЯ
                        </span>
                      </a>
                      <%= image_tag promoter.avatar.thumb.url, :class => "img-responsive", :alt => "Промоутер: #{promoter.name} #{promoter.surname}", :title => "Промоутер: #{promoter.name} #{promoter.surname}" %>
                    </figure>
                    <div class="item-box-desc">
                      <h4><%= promoter.name_with_rate %></h4>
                      <small class="styleColor"><a href="/users?utf8=%E2%9C%93&q%5Bgender_eq%5D=&q%5Bage_lteq%5D=&q%5Bage_gteq%5D=&q%5Bcountry_id_eq%5D=<%= promoter.country.id %>&q%5Bstate_id_eq%5D=<%= promoter.state.id %>&q%5Bcity_id_eq%5D=<%= promoter.city.id %>&commit=%D0%9D%D0%B0%D0%B9%D1%82%D0%B8"><%= promoter.city.name %> </a></small>
                      <strong><%= calculate_age(promoter.birth) %> <%= Russian.pluralize(calculate_age(promoter.birth), "год", "года", "лет") %></strong>
                    </div>
                  </div>
                </div>

                <% end %>


              
              </div>

              <!-- PAGINATION -->
              <div class="row">


              </div>
              <!-- /PAGINATION -->

            </div><!-- /col-md-9 -->

            <aside class="col-md-3">


  <% if params[:city] %>
    <%= render "/shared/search_form_with_city" %>
  <% else %>
    <%= render "/shared/search_form" %>
  <% end %>


            </aside>

          </div><!-- /row -->

        </section>

      </div>
    </div>
    <!-- /WRAPPER -->

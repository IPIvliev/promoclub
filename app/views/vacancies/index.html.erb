<h1>Listing vacancies</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>City</th>
    <th>Term</th>
    <th>Med</th>
    <th>Start date</th>
    <th>Finish date</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @vacancies.each do |vacancy| %>
  <tr>
    <td><%= vacancy.amount %></td>
    <td><%= vacancy.city_id %></td>
    <td><%= vacancy.term %></td>
    <td><%= vacancy.med %></td>
    <td><%= vacancy.start_date %></td>
    <td><%= vacancy.finish_date %></td>
    <td><%= vacancy.description %></td>
    <td><%= vacancy.price %></td>
    <td><%= link_to 'Show', vacancy %></td>
    <td><%= link_to 'Edit', edit_vacancy_path(vacancy) %></td>
    <td><%= link_to 'Destroy', vacancy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


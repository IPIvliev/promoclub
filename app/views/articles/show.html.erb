<link href="/plugins/blog.css" rel="stylesheet" type="text/css" />

<!-- WRAPPER -->
		<div id="wrapper">

			<div id="blog">

				<!-- PAGE TITLE -->
				<%= render "/shared/bread" %>

				<%= render '/shared/moremenu' %>

				<section class="container">

					<div class="row">
						<div class="left col-md-9">

							<!-- article title -->
							<header class="blog-post">
								<h1><%= @article.name %></h1>
								<small class="fsize13">
									<span class="label label-default light"><%= Russian::strftime(@article.created_at, "%d %B %Y") %></span>
									<span class="label label-default light"><%= @article.user_id %></span>
								</small>
							</header>
									<%= image_tag @article.picture.url, :class => "img-responsive", :alt => @article.name, :title => @article.name %>
									<br>
							<!-- article content -->
							<article>
								<%= @article.text.html_safe %>
							</article>

							<hr />

							<!-- SOCIAL -->
							<p class="socials">
								<a class="rounded-icon social fa fa-facebook" href="http://www.facebook.com/sharer.php?s=100&p[title]=<%= @article.name %>&p[summary]=<%= truncate( raw( sanitize(@article.text, :tags => %w(table tr td), :attributes => %w(id class style) ) ), :length => 80, :omission => "...") %>&p[url]=http://allpromoters.ru<%= article_path(@article) %>&p[images][0]=http://allpromoters.ru<%= @article.picture.url %>" target="_blank"></a>
								<a href="#" class="rounded-icon social fa fa-twitter"><!-- twitter --></a>
								<a href="#" class="rounded-icon social fa fa-google-plus"><!-- google plus --></a>
							</p>
						
						</div>

						<!-- SIDEBAR -->
						<%= render "/shared/rightcolumn" %>

					</div>

				</section>

			</div>
		</div>
		<!-- /WRAPPER -->
